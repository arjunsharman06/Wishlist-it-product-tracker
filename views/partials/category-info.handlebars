<div class='col-10 col-md-10 col-lg-4 col m-2'>
  <div
    class='card category-card p-3'
    style='width: 18rem;'
    style='max-height: 400px;'
    class='post'
    data-product-id={{id}}
  >
    <div class='product-tool'>
      <a href='/product/{{id}}'><i class='fa-solid fa-pen-to-square'></i></a>
      <a id='btn-delete' href=''><i class='fa-solid fa-trash-can'></i></a>
    </div>
    <img
      class='card-img-top'
      src='/images/{{image_name}}'
      alt='{{product_name}}'
      style='max-height: 240px;'
    />
    <div class='card-body'>
      <h5 class='card-title'>{{product_name}}</h5>
      <p class='card-text'>{{product_note}} </p>
    </div>
    <ol class='list-group list-group-flush'>
      <li class='list-group-item'>Stock: {{quantity}}</li>
      <li class='list-group-item'>Category:
        {{category.category.category_name}}</li>
      <li class='list-group-item'>Price: {{price}}</li>
    </ol>
    <button class='btn btn-warning'>Add to List</button>
  </div>
</div>